#######################################
# Environment
#######################################
ENV=development

#######################################
# JWT
#######################################
JWT_SECRET=change_me
JWT_TOKEN_EXPIRY=1h
JWT_REFRESH_EXPIRY=24h

#######################################
# HTTP Server
#######################################
HTTP_SERVER_PORT=8080
HTTP_SERVER_MAX_RETRIES=5
HTTP_SERVER_RETRY_DELAY=5

#######################################
# PostgreSQL (Auth Service)
#######################################
# Local run: localhost
# Docker: service name (e.g. postgres)
POSTGRES_PG_HOST=postgres
POSTGRES_PG_PORT=5432
POSTGRES_PG_USER=auth
POSTGRES_PG_PASSWORD=auth
POSTGRES_PG_DBNAME=auth
POSTGRES_PG_SSLMODE=disable
POSTGRES_PG_MAX_CONNS=50
POSTGRES_PG_MIN_CONNS=10
POSTGRES_PG_TIMEOUT=5
POSTGRES_PG_MAX_RETRIES=5
POSTGRES_PG_RETRY_DELAY=2

#######################################
# Logger
#######################################
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_OUTPUT_PATHS=stdout
LOG_ERROR_OUTPUT_PATHS=stderr
LOG_DEVELOPMENT=true
LOG_ENABLE_STACKTRACE=true
LOG_TIME_FORMAT=iso8601

#######################################
# Redis
#######################################
# Local run: localhost
# Docker: service name (e.g. redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY=2

#######################################
# Kafka
#######################################
# Docker: kafka:9092
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC=user.registered.v1
KAFKA_GROUP_ID=auth-service
KAFKA_MAX_ATTEMPTS=3
KAFKA_RETRY_DELAY=2
KAFKA_BATCH_SIZE=100
KAFKA_POLL_INTERVAL=5
